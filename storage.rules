rules_version = '2';

// Firebase Storage Security Rules
service firebase.storage {
  match /b/{bucket}/o {
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Allow users to upload their own photos
    match /photos/{userId}/{allPaths=**} {
      allow read: if isSignedIn();  // Any signed-in user can view photos
      allow create: if isOwner(userId);  // Only the owner can upload
      allow delete: if isOwner(userId);  // Only the owner can delete
    }

    // Allow access to other static assets if needed
    match /{allPaths=**} {
      allow read: if true;  // Public read access for any other files
      allow write: if false;  // No write access by default
    }
  }
}